<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="40dp"
            android:text="투표 기한 지정"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:text="종료  날짜  선택"
            android:textSize="19sp" />

        <DatePicker
            android:id="@+id/set_vote_deadline_datePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:headerBackground="#000000"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="종료  시간  선택"
            android:textSize="19sp" />

        <TimePicker
            android:id="@+id/set_vote_deadline_timepicker"
            android:layout_width="match_parent"
            android:layout_height="172dp"
            android:timePickerMode="spinner" />

        <Button
            android:id="@+id/set_vote_deadline_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp"
            android:text="확인" />

    </LinearLayout>

    </ScrollView>

</LinearLayout>