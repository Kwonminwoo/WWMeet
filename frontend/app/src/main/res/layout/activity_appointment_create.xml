<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:text="약속  설정"
            android:textSize="35sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="120dp"
            android:text=" 약속  이름"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/appointment_create_name_edit"
            android:layout_width="310dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:paddingLeft="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_box1"
            android:hint="20 학번 모임" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginRight="120dp"
            android:text=" 약속  장소"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/appointment_create_place_edit"
            android:layout_width="310dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:paddingLeft="15dp"
            android:background="@drawable/background_box1"
            android:hint="두정역" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="참여  인원"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/add_top_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/appointment_create_minus_btn"
                android:layout_width="55dp"
                android:layout_height="65dp"
                android:layout_marginLeft="110dp"
                android:padding="5sp"
                android:scaleType="centerCrop"
                android:src="@drawable/downlogo" />

            <TextView
                android:id="@+id/appointment_create_num_people_text"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:hint="1"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/appointment_create_add_btn"
                android:layout_width="55dp"
                android:layout_height="65dp"
                android:padding="5sp"
                android:scaleType="centerCrop"
                android:src="@drawable/uplogo" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginRight="110dp"
            android:text=" 사용자  이름"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/appointment_create_user_name_edit"
            android:layout_width="310dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:paddingLeft="15dp"
            android:background="@drawable/background_box1"
            android:hint="김공주대" />

        <Button
            android:id="@+id/appointment_create_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button"
            android:backgroundTint="@color/black"
            android:letterSpacing="0.1"
            android:text="확인"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:textStyle="bold" />


    </LinearLayout>

</LinearLayout>