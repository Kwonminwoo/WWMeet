<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:text="약 속 이 름"
            android:id="@+id/appointment_info_after_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="35sp" />

        <LinearLayout
            android:layout_width="390dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/background_box1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/place_space"
                android:layout_width="360dp"
                android:layout_height="55dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="20dp"
                    android:padding="5sp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/place" />

                <TextView
                    android:text="장소"
                    android:id="@+id/appointment_info_after_place_text"
                    android:layout_width="255dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="25dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Participation_num_space"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="20dp"
                    android:padding="5sp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/number" />

                <TextView
                    android:id="@+id/appointment_info_before_participation_text1"
                    android:layout_width="25dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:textSize="25dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="총"/>

                <TextView
                    android:text="0"
                    android:id="@+id/appointment_info_after_participation_num_text"
                    android:layout_width="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_height="50dp"
                    android:textSize="30dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/appointment_info_before_participation_text2"
                    android:layout_width="25dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:textSize="25dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="명"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/appointment_info_after_num_arrow"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:padding="5sp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/arrow" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:background="@drawable/background_box2"
            android:id="@+id/appointment_info_after_participant_box"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/appointment_info_after_participant_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:id="@+id/appointment_info_after_1_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="170dp"
            android:text="1위"
            android:textStyle="bold"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="390dp"
            android:layout_height="75dp"
            android:background="@drawable/background_box1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical|left"
                    android:scaleType="fitXY"
                    android:src="@drawable/clock" />

                <TextView
                    android:text="없습니다."
                    android:layout_marginLeft="20dp"
                    android:id="@+id/appointment_info_after_vote_result_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/appointment_info_after_2_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="170dp"
            android:text="2위"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="390dp"
            android:layout_height="75dp"
            android:background="@drawable/background_box3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical|left"
                    android:scaleType="fitXY"
                    android:src="@drawable/clock" />

                <TextView
                    android:text="없습니다."
                    android:id="@+id/appointment_info_after_vote_result_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="22dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/appointment_info_after_3_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="170dp"
            android:text="3위"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="390dp"
            android:layout_height="75dp"
            android:background="@drawable/background_box3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">

                <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical|left"
                android:scaleType="fitXY"
                android:src="@drawable/clock" />

                <TextView
                    android:text="없습니다."
                    android:id="@+id/appointment_info_after_vote_result_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/black"
                    android:textSize="22dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/appointment_info_after_create_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/button_design"
            android:backgroundTint="@color/black"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:letterSpacing="0.1"
            android:textStyle="bold"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="50dp"
            android:text="확인" />

        <Button
            android:id="@+id/appointment_info_after_food_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/button_design"
            android:backgroundTint="@color/black"
            android:textColor="#ffffff"
            android:letterSpacing="0.1"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="50dp"
            android:text="맛집  찾기" />


    </LinearLayout>

    </ScrollView>

</LinearLayout>