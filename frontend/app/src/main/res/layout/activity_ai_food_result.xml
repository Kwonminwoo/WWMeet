<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".appointment.info.restaurant.AIFoodResultActivity">


    <LinearLayout
        android:layout_gravity="center"
        android:padding="10dp"
        android:layout_weight="2.5"
        android:layout_marginTop="35dp"
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@drawable/background_box3">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:textSize="20sp"
            android:text="  당신의 감정이 "
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/ai_food_result_emotion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="감정 출력"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:textSize="20sp"
            android:text="일 확률은?"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>

        <View
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="2dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ai_food_result_emotion_image"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_marginRight="50dp"
                android:src="@drawable/number"/>

            <TextView
                android:id="@+id/ai_food_result_probability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="89%"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="50sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="50sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"
        android:layout_weight="0.6"
        android:gravity="center"
        android:layout_width="380dp"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/ai_food_result_emotion_sentence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="18sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:padding="10dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="2.5"
        android:background="@drawable/background_box3">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
            android:textSize="20sp"
            android:text="  당신의 감정에 어울리는 "
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/ai_food_result_food_type"
            android:textSize="20sp"
            android:text="종류"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text=" 음식"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>

        <ImageView
            android:id="@+id/ai_food_result_search1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/foodsearch"
            android:scaleType="fitXY"
            android:padding="3sp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp" />

        </LinearLayout>

        <View
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="2dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ai_food_result_food_type_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="50dp"
                android:src="@drawable/number" />

            <TextView
                android:id="@+id/ai_food_result_type_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카레"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="50sp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_weight="2.5"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@drawable/background_box3">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textSize="20sp"
                android:text="  오늘의 감정 "
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/ai_food_result_emotion1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="감정"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="에 추천하는 음식"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ai_food_result_search2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/foodsearch"
                android:scaleType="fitXY"
                android:padding="3sp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp" />

        </LinearLayout>

        <View
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="2dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ai_food_result_emotion_food_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="50dp"
                android:src="@drawable/number"/>

            <TextView
                android:id="@+id/ai_food_result_emotion_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="초콜릿"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="50sp"/>
        </LinearLayout>

    </LinearLayout>


    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>

    <Button
        android:id="@+id/ai_food_result_restaurant_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/button"
        android:backgroundTint="@color/black"
        android:letterSpacing="0.5"
        android:text="확인"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:textStyle="bold" />


</LinearLayout>