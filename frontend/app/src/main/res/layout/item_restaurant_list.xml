<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/background_box1"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_restaurant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가게 이름"
            android:textColor="@color/black"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/item_restaurant_menu"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="메뉴 종류"/>

    </LinearLayout>

    <TextView
        android:id="@+id/item_restaurant_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:text="천안시 서북구 성정동"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginVertical="10dp"
        android:background="@color/black" />

    <ImageView
        android:id="@+id/item_restaurant_image"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="250dp"
        android:src="@drawable/number"/>

</LinearLayout>