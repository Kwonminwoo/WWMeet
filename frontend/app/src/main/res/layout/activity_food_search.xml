<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".appointment.info.FoodSearchActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginVertical="10dp"
        android:layout_width="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.5"
        android:layout_height="0dp">

        <ImageView
            android:src="@drawable/place"
            android:scaleType="fitXY"
            android:layout_marginRight="10dp"
            android:layout_gravity="bottom"
            android:layout_width="32dp"
            android:layout_height="32dp"/>

        <TextView
            android:id="@+id/food_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="위치"
            android:layout_gravity="bottom"
            android:textStyle="bold"
            android:textSize="26sp"
            android:textColor="@color/black"/>

    </LinearLayout>



    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/skeleton_restaurant"
        android:layout_weight="9.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <include layout="@layout/skeleton_item_restaurant_list"/>
                <include layout="@layout/skeleton_item_restaurant_list"/>
                <include layout="@layout/skeleton_item_restaurant_list"/>
                <include layout="@layout/skeleton_item_restaurant_list"/>
                <include layout="@layout/skeleton_item_restaurant_list"/>

            </LinearLayout>
        </ScrollView>

    </com.facebook.shimmer.ShimmerFrameLayout>

    <LinearLayout
        android:id="@+id/restart_search_list"
        android:visibility="gone"
        android:layout_weight="9.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/food_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</LinearLayout>